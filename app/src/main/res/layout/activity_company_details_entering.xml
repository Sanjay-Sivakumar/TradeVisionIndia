<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyDetailsEntering">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_calender"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="18dp"
                    android:inputType="date"
                    android:id="@+id/visitinputdate"
                    android:textColor="#000"
                    android:text="12/07/2002"
                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables"
                android:layout_marginStart="18dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_time"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    android:inputType="date"
                    android:id="@+id/visitinputtime"
                    android:textColor="#000"
                    android:text="12/07/2002"
                    android:textSize="16sp"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint=" Enter Company Name"
                android:id="@+id/visitinputcompanyname"
                android:textColor="#000"
                android:textColorHint="#000"
                android:drawableLeft="@drawable/ic_company" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Name Of The Head"
                android:id="@+id/visitinputnameofthehead"
                android:drawableLeft="@drawable/ic_head"
                android:textColor="#000"
                android:textColorHint="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint=" Enter Company Address"
                android:drawableLeft="@drawable/ic_locationicon"
                android:id="@+id/visitinputcompanyaddress"
                android:textColor="#000"
                android:textColorHint="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint=" Enter Phone Number"
                android:drawableLeft="@drawable/ic_phoneicon"
                android:id="@+id/visitinputcompanyphonenumber"
                android:textColor="#000"
                android:textColorHint="#000"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint=" Enter Site Address"
                android:id="@+id/visitinputcompanysiteaddress"
                android:textColor="#000"
                android:textColorHint="#000"
                android:drawableLeft="@drawable/ic_web"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint=" Enter Email"
                android:id="@+id/visitinputcompanyemail"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_contactmail"
                android:textColorHint="#000"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginStart="70dp"
                android:text="Existing Plant Owner"/>
            <Spinner
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:entries="@array/yesorno"
                android:textAlignment="center"
                android:id="@+id/visitinputcompanyexistingplantowner"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
           <TextView
               android:layout_width="150dp"
               android:layout_height="30dp"
               android:textAlignment="center"
               android:textColor="#000"
               android:layout_marginStart="70dp"
               android:text="Pollution Cleaned"/>
            <Spinner
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:entries="@array/yesorno"
                android:textAlignment="center"
                android:id="@+id/visitinputpollution"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginStart="70dp"
                android:text="Quarry"/>
            <Spinner
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:entries="@array/quarry"
                android:textAlignment="center"
                android:id="@+id/visitinputcompanyquarry"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTHER CONTACT DETAILS"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Name"
                android:id="@+id/visitinputpersonname"
                android:textColor="#000"
                android:drawableLeft="@drawable/profile_icon"
                android:padding="12dp"
                android:textColorHint="#000"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Designation"
                android:drawableLeft="@drawable/ic_workpositionicon"
                android:padding="12dp"
                android:id="@+id/visitinputpersondesignation"
                android:textColor="#000"
                android:textColorHint="#000"
                tools:ignore="Autofill"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/ic_phoneicon"
                android:padding="12dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Phone Number"
                android:id="@+id/visitinputpersonphonenumber"
                android:textColor="#000"
                android:textColorHint="#000" />
        </LinearLayout>

        <EditText
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:inputType="date"
            android:id="@+id/nextvisitdate"
            android:hint="Next Visit"
            android:textColor="#000"
            android:textColorHint="#000"
            android:layout_marginTop="10dp"
            android:layout_marginStart="150dp"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="SUBMIT"
            android:background="@drawable/ripple_effect"
            android:id="@+id/visitinputbutton"
            android:textColor="@color/black"
            android:layout_marginStart="160dp"/>



    </LinearLayout>



</ScrollView>