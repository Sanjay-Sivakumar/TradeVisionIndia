<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserprofilePage"
    android:orientation="vertical">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="350dp">

      <ImageView
          android:layout_width="250dp"
          android:layout_centerHorizontal="true"
          android:layout_height="200dp"
          android:id="@+id/profileimageuserview"
          android:layout_marginTop="80dp"
          android:src="@drawable/user_profile" />


      <LinearLayout
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="300dp"
          android:background="@drawable/edittext_bg"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:clickable="true"
          android:id="@+id/editprofilell"
          android:focusable="true">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_editicon" />

         <TextView
             android:layout_width="100dp"
             android:layout_height="wrap_content"
             android:text="Edit Profile"
             android:textColor="#000"
             android:textSize="20dp"
             android:textStyle="bold" />
      </LinearLayout>

   </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <androidx.cardview.widget.CardView
          android:layout_width="80dp"
          android:layout_height="70dp"
          android:layout_marginStart="90dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_rate" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:padding="12dp"
                android:id="@+id/starratingview"
                android:text="1" />


         </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:layout_width="80dp"
          android:layout_height="70dp"
          android:layout_marginStart="60dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_company_visited" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:padding="12dp"
                android:id="@+id/companyvisitedview"
                android:text="1" />

         </LinearLayout>
      </androidx.cardview.widget.CardView>
   </LinearLayout>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="450dp"
          android:layout_marginTop="10dp"
          android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:background="@drawable/bg_round"
                android:src="@drawable/ic_profileicon" />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/fullnameview"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="#000"
                android:padding="12dp"
                android:text="Full Name" />


         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:orientation="horizontal"
             android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_phoneicon" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="#000"
                android:padding="12dp"
                android:id="@+id/phonenumberview"
                android:text="Phone Number" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:orientation="horizontal"
             android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_contactmail" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="12dp"
                android:id="@+id/emailidview"
                android:text="Email" />


         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:orientation="horizontal"
             android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_locationicon" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:padding="12dp"
                android:id="@+id/addressview"
                android:text="Address" />


         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:orientation="horizontal"
             android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_workpositionicon" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:padding="12dp"
                android:id="@+id/workingpositionview"
                android:text="Current Working Position" />


         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:orientation="horizontal"
             android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_zonalarea" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:padding="12dp"
                android:id="@+id/workingzoneview"
                android:text="Working Zone" />


         </LinearLayout>

      </LinearLayout>

   </ScrollView>


</LinearLayout>
