<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderLossEntry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="18dp"
                    android:src="@drawable/ic_calender"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="18dp"
                    android:inputType="date"
                    android:id="@+id/orderlossdate"
                    android:textColor="#000"
                    android:text="12/07/2002"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_order"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    android:id="@+id/orderlossNumber"
                    android:textColor="#000"
                    android:text="12/07/2002"
                    android:textSize="20sp"/>

            </LinearLayout>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/competitorsbrand"
            android:hint="Brands"
            android:padding="12dp"
            android:gravity="top"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_round"
            android:importantForAutofill="no"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="#f1f1f1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lost To Reason"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"/>



            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Price"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:layout_marginBottom="1dp"
                    android:layout_marginHorizontal="1dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="pricevalue"
                    android:id="@+id/textViewpricevalue"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"/>


            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Existing Brand"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:layout_marginBottom="1dp"
                    android:layout_marginHorizontal="1dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="brand"
                    android:id="@+id/textViewexisitingbrand"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"/>


            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Scope"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:layout_marginBottom="1dp"
                    android:layout_marginHorizontal="1dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/textViewscope"
                    android:hint="scope"
                    android:background="#ffffff"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"/>


            </TableRow>
        </TableLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/otherReasonorderloss"
            android:hint="Other Reason"
            android:padding="12dp"
            android:gravity="top"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_round"
            android:importantForAutofill="no"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/competitorPrice"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Competitor Price"
            android:inputType="text"
            android:textColorHint="#000"
            android:textColor="#000"
            android:textAlignment="center"
            android:background="@drawable/bg_round"
            android:importantForAutofill="no" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="SUBMIT"
            android:id="@+id/submitorderloss"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:layout_marginStart="160dp"
            />


    </LinearLayout>


</ScrollView>